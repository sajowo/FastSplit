# Kopiuj do .env (opcjonalnie) i ustaw własne wartości.

# Django
DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# CSRF trusted origins (dla produkcji na Render)
# Format: https://twoja-domena.onrender.com
CSRF_TRUSTED_ORIGINS=

# Axes (blokady logowania) – u Ciebie domyślnie wyłączone w settings.py
AXES_ENABLED=0

# reCAPTCHA (domyślnie w projekcie są klucze testowe Google)
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_PRIVATE_KEY=
RECAPTCHA_USE_SSL=0

# Tylko dev: obejście problemów SSL na macOS (nie zalecane)
PYTHONHTTPSVERIFY_DISABLE=0

# Render automatycznie ustawia tę zmienną (nie trzeba ręcznie ustawiać)
# RENDER_EXTERNAL_HOSTNAME=
